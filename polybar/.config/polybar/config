[bar/main]
; Colors
black = #1a1a1a
white = #abb2bf
red = #be5046
blue = #3c909b
green = #98c379

fg = ${xrdb:color7}
bg = ${xrdb:color0}

;monitor = ${env:MONITOR:HDMI-1}
;override-redirect = true
width = 100%
height = 36
offset-x = 0
offset-y = 0

background = ${bar/main.bg}
foreground = ${bar/main.fg}

underline-size = 4
overline-size = 4

separator = "%{F#555}  /  "
padding-left = 5
padding-right = 0
module-margin-left = 3
module-margin-right = 3

font-0 = Fira Sans:pixelsize=9;2
font-1 = unifont:fontformat=truetype:size=8:antialias=false;1
font-2 = Wuncon Siji:antialias=false;pixelsize=11;1
font-3 = FontAwesome:pixelsize=7;1

modules-left = btc bch eth xmr coin_ratio
modules-center = i3
;modules-center = bspwm
modules-right = switch_aspect pkg mpd volume date powermenu

tray-position = right
tray-padding = 2
;tray-transparent = true
tray-background = ${bar/main.background}

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev


[module/title]
type = internal/xwindow
label-maxlen = 50


[module/i3]
type = internal/i3
ws-icon-default = x

format = <label-state>

enable-click = true
label-focused= %index%
label-focused-foreground = ${bar/main.fg}
label-focused-background = ${xrdb:background1}
label-focused-padding = 3
label-focused-overline = ${xrdb:background2}

label-unfocused = %index%
label-unfocused-padding = 3

label-urgent = %index%
label-urgent-background = ${xrdb:color9}
label-urgent-overline = ${xrdb:color1}
label-urgent-padding = 3

reverse-scroll = false

[module/mpd]
type = internal/mpd

format-online = <icon-prev>   <toggle>   <icon-next>   <bar-progress>   <icon-repeat>

label-song-maxlen = 40
label-song-ellipsis = true

icon-prev = 
icon-seekb = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 
icon-seekf = 

icon-random = 
icon-repeat = 

toggle-on-foreground = ${bar/main.red}
toggle-off-foreground = ${bar/main.white}
;
; Only applies if <bar-progress> is used
bar-progress-width = 16
bar-progress-indicator = │
bar-progress-fill = ─
bar-progress-empty = ─
bar-progress-fill-foreground = ${bar/main.blue}

[module/date]
type = internal/date
date = %{F#be5046} %{F-} %H:%M  %d-%m-%Y
interval = 5
;format-underline = #0a6cf5

[module/volume]
type = internal/volume

format-volume = <label-volume> <bar-volume>

label-volume = "  "
label-volume-foreground = ${bar/main.foreground}

label-muted = "  MUTED"
label-muted-foreground = #555

bar-volume-width = 8
bar-volume-indicator = │
bar-volume-indicator-font = 2
bar-volume-indicator-foreground = ${bar/main.white}
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-fill-foreground = ${bar/main.blue}
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = #555

[module/powermenu]
type = custom/menu

label-open = 
label-open-foreground = ${bar/main.red}
label-close = cancel
label-close-foreground = ${bar/main.red}
label-separator = " | "
label-separator-foreground = #55

menu-0-0 = logout
menu-0-0-exec = menu-open-1
menu-0-1 = reboot
menu-0-1-exec = menu-open-2
menu-0-2 = power off
menu-0-2-exec = menu-open-3

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = logout
menu-1-1-exec = i3-msg exit
;menu-1-1-exec = bspc quit

menu-2-0 = cancel
menu-2-0-exec = menu-open-0
menu-2-1 = reboot
menu-2-1-exec = systemctl reboot

menu-3-0 = power off
menu-3-0-exec = systemctl poweroff
menu-3-1 = cancel
menu-3-1-exec = menu-open-0

[module/switch_aspect]
type = custom/text

content = 
click-left = sh ~/.scripts/switch_aspect.sh

; vim:ft=dosini

[module/pkg]
type = custom/script
interval = 300
format = <label>
format-overline = ${bar/main.red}
label = "%output:0:30%"
exec = ~/.config/polybar/pkg.sh
exec-if = "ping -q -w 2 -c 1 176.34.135.167 > /dev/null"

[module/btc]
type = custom/script
interval = 20
format = <label>
tail = true
exec = ~/.config/polybar/coin.py btc

[module/bch]
type = custom/script
interval = 20
format = <label>
tail = true
exec = ~/.config/polybar/coin.py bch

[module/eth]
type = custom/script
interval = 20
format = <label>
tail = true
exec = ~/.config/polybar/coin.py eth

[module/xmr]
type = custom/script
interval = 20
format = <label>
tail = true
exec = ~/.config/polybar/coin.py xmr

[module/coin_ratio]
type = custom/script
interval = 20
format = <label>
tail = true
exec = ~/.config/polybar/coin.py ratio

[settings]
format-foreground = ${bar/main.fg}
format-background = ${bar/main.bg}
