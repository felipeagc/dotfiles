[bar/top]
; Colors
black = #14161a
white = #abb2bf
red = #be5046
blue = #3c909b

;monitor = ${env:MONITOR:HDMI-1}
override-redirect = true
width = 100%
height = 36
offset-x = 0
offset-y = 0

background = ${bar/top.black}
foreground = ${bar/top.white}

underline-size = 4
overline-size = 4

separator = "%{F#444}  /  "
padding-left = 5
padding-right = 0
module-margin-left = 3
module-margin-right = 3

font-0 = Fira Sans:pixelsize=9;2
font-1 = unifont:fontformat=truetype:size=8:antialias=false;1
font-2 = Wuncon Siji:antialias=false;pixelsize=11;1
font-3 = FontAwesome:pixelsize=7;1

modules-left = title
modules-center = bspwm
modules-right = pkg mpd volume date powermenu

tray-position = right
tray-padding = 2
;tray-transparent = true
tray-background = ${bar/top.background}

wm-restack = bspwm

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev


[module/title]
type = internal/xwindow
label-maxlen = 50


[module/bspwm]
type = internal/bspwm
ws-icon-default = x

enable-click = true
label-focused= %index%
label-focused-background = #282c34
label-focused-padding = 3
label-focused-overline = #31353f

label-occupied = %index%
label-occupied-padding = 3

label-urgent = %index%
label-urgent-background = #bd2c40
label-urgent-padding = 3

label-empty = %index%
label-empty-foreground = #55
label-empty-padding = 3
reverse-scroll = false

[module/mpd]
type = internal/mpd

format-online = %{F#abb2bf}<icon-prev>   <toggle>   <icon-next>   <bar-progress>   <icon-repeat>

label-song-maxlen = 40
label-song-ellipsis = true

icon-prev = 
icon-seekb = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 
icon-seekf = 

icon-random = 
icon-repeat = 

toggle-on-foreground = ${bar/top.red}
toggle-off-foreground = ${bar/top.white}
;
; Only applies if <bar-progress> is used
bar-progress-width = 16
bar-progress-indicator = │
bar-progress-fill = ─
bar-progress-empty = ─
bar-progress-fill-foreground = ${bar/top.blue}

[module/wlan]
type = internal/network
interface = wlp4s5
interval = 3.0

format-connected = <ramp-signal> <label-connected>
;format-connected-underline = #9f78e1
;format-disconnected-underline = ${self.format-connected-underline}

label-connected = %essid%
label-disconnected = %ifname% disconnected
label-disconnected-foreground = #555

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = #666

[module/date]
type = internal/date
date = %{F#be5046} %{F#abb2bf} %H:%M  %d-%m-%Y
interval = 5
;format-underline = #0a6cf5

[module/volume]
type = internal/volume

format-volume = <label-volume> <bar-volume>

label-volume = "  "
label-volume-foreground = ${bar/top.foreground}

label-muted = "  MUTED"
label-muted-foreground = #555

bar-volume-width = 8
bar-volume-indicator = │
bar-volume-indicator-font = 2
bar-volume-indicator-foreground = ${bar/top.white}
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-fill-foreground = ${bar/top.blue}
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = #55

[module/powermenu]
type = custom/menu

label-open = 
label-open-foreground = ${bar/top.red}
label-close = cancel
label-close-foreground = ${bar/top.red}
label-separator = |
label-separator-foreground = #55

menu-0-0 = logout
menu-0-0-exec = menu-open-1
menu-0-1 = reboot
menu-0-1-exec = menu-open-2
menu-0-2 = power off
menu-0-2-exec = menu-open-3

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = logout
menu-1-1-exec = bspc quit

menu-2-0 = cancel
menu-2-0-exec = menu-open-0
menu-2-1 = reboot
menu-2-1-exec = systemctl reboot

menu-3-0 = power off
menu-3-0-exec = systemctl poweroff
menu-3-1 = cancel
menu-3-1-exec = menu-open-0

[module/gamemode]
type = custom/text

content = 
click-left = sh ~/.scripts/gamemode.sh

; vim:ft=dosini

[module/pkg]
type = custom/script
interval = 300
format = <label>
format-underline = ${bar/top.red}
label = "%output:0:30%"
exec = ~/.config/polybar/pkg.sh
exec-if = "ping -q -w 2 -c 1 176.34.135.167 > /dev/null"
